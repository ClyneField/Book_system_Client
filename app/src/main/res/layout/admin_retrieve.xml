<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A0f0F0">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/retrieve"
        android:stretchColumns="0,1">
        <TableRow>
            <TextView
                android:id="@+id/retrieve_name"
                android:layout_height="wrap_content"
                android:text="@string/retrieve_text1"
                android:textSize="25sp"
                android:paddingLeft="20dp"/>
            <TextView
                android:id="@+id/retrieve_id"
                android:layout_height="wrap_content"
                android:text="@string/retrieve_text2"
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/retrieve_price"
                android:layout_height="wrap_content"
                android:text="@string/retrieve_text3"
                android:textSize="25sp"
                android:paddingRight="20dp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
