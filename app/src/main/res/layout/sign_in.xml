<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">
    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/account" />
    <RelativeLayout android:layout_marginTop="30dp">
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <RadioButton
                android:id="@+id/student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学生用户"
                android:layout_toLeftOf="@+id/blank1"
                android:checked="true"/>
            <TextView
                android:id="@+id/blank"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>
            <RadioButton
                android:id="@+id/admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理用户"
                android:layout_toRightOf="@+id/blank"/>
        </RadioGroup>
    </RelativeLayout>
    <TableRow android:layout_marginTop="15dp">
        <TextView
            android:text="@string/account_button1"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:hint="请输入0-9位数字或字母"
            android:layout_marginRight="20dp"
            android:maxLength="10"/>
    </TableRow>
    <TableRow android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/a_manager"
            android:text="@string/account_button2"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"/>
        <EditText
            android:id="@+id/userPassword"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:hint="请输入0-9位数字或字母"
            android:layout_marginRight="20dp"
            android:maxLength="12"/>
    </TableRow>
    <RelativeLayout>
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/blank2"/>
        <TextView
            android:id="@+id/blank2"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <TextView
            android:text="记住密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/blank2"/>
    </RelativeLayout>
    <RelativeLayout android:layout_marginTop="15dp">
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/signIn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/account_button3"
            android:textSize="25sp"
            android:background="@drawable/shape"/>
    </RelativeLayout>
    <RelativeLayout android:layout_marginTop="15dp">
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/signUp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/account_button4"
            android:textSize="25sp"
            android:background="@drawable/shape" />
    </RelativeLayout>
</TableLayout>
