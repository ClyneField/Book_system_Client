<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <Button
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:text="@string/account_button1"
        android:textColor="@color/main_button"
        android:id="@+id/a_personal"
        android:textSize="10pt"
        android:background="@drawable/shape"
        android:layout_above="@+id/a_manager"
        android:layout_alignRight="@+id/a_manager"
        android:layout_marginBottom="5pt"/>

    <Button
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:text="@string/account_button2"
        android:textColor="@color/main_button"
        android:id="@+id/a_manager"
        android:textSize="10pt"
        android:background="@drawable/shape"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5pt"/>

    <Button
        android:layout_width="45pt"
        android:layout_height="wrap_content"
        android:text="@string/account_button3"
        android:textColor="@color/main_button"
        android:id="@+id/m_create"
        android:textSize="10pt"
        android:background="@drawable/shape"
        android:layout_below="@+id/a_manager"
        android:layout_alignLeft="@+id/a_manager"
        android:layout_marginBottom="5pt"/>

    <Button
        android:layout_width="45pt"
        android:layout_height="wrap_content"
        android:text="@string/account_button4"
        android:textColor="@color/main_button"
        android:id="@+id/sign_up"
        android:textSize="10pt"
        android:background="@drawable/shape"
        android:layout_below="@+id/a_manager"
        android:layout_alignRight="@+id/a_manager"
        android:layout_marginBottom="5pt"/>
</RelativeLayout>
